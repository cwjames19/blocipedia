<div class="col-md-8">
	<div class='form'>
		<%= form_for wiki do |f| %>
			<div class='form-group'>
				<%= f.label :title %><br />
				<%= "#{wiki.title}" %>
			</div>
			<div class='form-group'>
				<%= f.label :body, "Body (shown with Markdown syntax)" %>
				<%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body here" %>
			</div>
			<div class='form-group'>
				<% if (wiki.user == current_user && current_user.role == 'premium') || current_user.role== 'admin' %>
					<%= fields_for wiki do |p| %>
						<%= p.label :private %>
						<%= p.check_box :private %>
					<% end %>
				<% end %>
			</div>
			<%= f.submit "Submit Wiki", class:'btn btn-success' %>
		<% end %>
	</div>
</div>
