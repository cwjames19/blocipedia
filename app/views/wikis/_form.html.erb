<div class='form'>
	<%= form_for wiki do |f| %>
		<div class='form-group'>
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title here" %>
		</div>
		<div class='form-group'>
			<%= f.label :body %>
			<%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body here" %>
		</div>
		<% if current_user.premium? || current_user.admin? %>
			<div class='form-group'>
				<%= check_box_tag :private %>
				<%= label_tag :private, "Private" %>
			</div>
		<% end %>
			<%= f.submit "Create Wiki", class:'btn btn-success' %>
		<% end %>
</div>